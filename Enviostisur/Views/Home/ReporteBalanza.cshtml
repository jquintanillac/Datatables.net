        }

        function EscogerDocu(oDocu) {
            $("#bl").val(oDocu.ID_DOCU_ORIG);
            $("#inpbl").val(oDocu.NU_DOCU_ORIG);
            $("#docu").modal('hide');
            $('.modal-backdrop').remove();
        }
        function EscogerItem(oDDocu) {
            $("#items").val(oDDocu.NU_SECU_ITEM);
            $("#item").modal('hide');
